---
import Layout from "../../../layouts/Layout.astro";
import { appwriteDatabases } from "../../../lib/backend";
import { COLLECTION, DB_ID } from "../../../lib/ids";
let classId = Astro.params.id as string;
let Class = await appwriteDatabases.getDocument(DB_ID, COLLECTION.Classes, classId)
---
<Layout title="Class" login={true}>
    <div class="flex flex-col gap-5 min-h-screen">
        <h1 class="text-4xl font-semibold text-center text-white">{Class.Name}</h1>
        <h2 class="text-4xl text-center text-white">Available Services</h2>
        <div style="cursor: pointer;" class="flex flex-col sm:flex-row gap-10 mt-5 items-center justify-center w-full">
            <a href={`./${classId}/services/draftonn`} class="items-center justify-center block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                <img src="/DraftOnn.png" class="h-28 mx-auto">
                <h1 class="text-3xl text-white text-center">DraftOnn</h1>
                <h2 class="text-lg text-white">The collaborative note-taking app</h2>
            </a>
            <a href={`./${classId}/services/helpinghand`} class="items-center justify-center block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                <img src="/HelpingHand.png" class="h-28 mx-auto">
                <h1 class="text-3xl text-white text-center">HelpingHand</h1>
                <h2 class="text-lg text-white">Help your friends with homework problems they struggle with</h2>
            </a>
        </div>
    </div>
</Layout>
