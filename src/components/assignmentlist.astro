---
function prettyDate(date: string) {
    let d = new Date(date)
    if(d.toDateString() === new Date().toDateString()) {
        return "Today"
    } else if (d.toDateString() === new Date(Date.now() - 864e5).toDateString()) {
        return "Yesterday"
    } else {
        return d.toLocaleDateString()
    }
}

let { day } = Astro.props
---

<h1 class="text-xl sm:text-2xl 2xl:text-4xl text-center text-white">{prettyDate(day[0].$createdAt)}</h1>
<div class="flex flex-col items-center w-full gap-y-5">
    {day.map((assignment: any) =>(
        <a onclick={`location.href += "/assignment/${assignment.$id}"`} class="w-96 block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
            <h1 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white text-center">{assignment.Name}</h1>
        </div>
    ))}
</div>